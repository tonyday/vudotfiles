alias be="bundle exec"
alias bef="be foreman"
alias befr="bef run"
alias befrgt='befr --env .env.test guard'
alias brbr="bundle exec rake && bundle exec rubocop"
alias gff='git merge --ff-only'
alias gpbm="git push bitbucket master"
alias gpgm="git push github master"
alias gphm="git push heroku master"
alias gpom="git push origin master"
alias hl="heroku local"
alias rc="befr rails c"
alias cop="befr rubocop"
alias std="standard --verbose **/*.js **/*.es6"
alias tst="SEEMYSITE_DATABASE_USERID=postgres be rake test && cop && std"
pc () { psql -U postgres "${PWD##*/}"_development -c "$@"; }
pcq () { psql -U postgres "${PWD##*/}"_development ; }
export LESS=-SR
export BUNDLER_EDITOR=vim
